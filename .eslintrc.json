{
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-console": "off"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [],
  "globals": {
    "jest": true,
    "expect": true,
    "beforeEach": true,
    "afterEach": true,
    "describwe": true,
    "test": true,
    "it": true
  },
  "parserOptions": {
    "sourceType": "module"
  }
}